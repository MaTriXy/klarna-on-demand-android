<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffffff"
    android:clickable="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/the_girl_with_the_dragon_tatoo"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="70dp"
        android:contentDescription="The Girl with the Dragon Tatoo image"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Buy 1 ticket for 99kr"
        android:id="@+id/buyTextView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:maxLines="1"
        android:textColor="#ff0000ff"
        android:clickable="true"
        android:gravity="center"
        android:textSize="30dp"
        android:onClick="onBuyPressed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You&apos;ll have to register first"
        android:gravity="center"
        android:clickable="false"
        android:textColor="#ff000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/registerTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Change payment preferences"
        android:gravity="center"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/changePaymentTextView"
        android:onClick="openKlarnaPreferences"
        android:textColor="#ff0000ff" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="1"
        android:layout_alignBottom="@+id/imageView"
        android:id="@+id/qrCodeView"
        android:visibility="invisible">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="0.9"
            android:background="#ff000000">

        </FrameLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qr_code"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:alpha="1"
                android:adjustViewBounds="true"
                android:layout_margin="50dp"
                android:id="@+id/qrCodeView"
                android:layout_centerInParent="true"
                android:focusable="false"
                android:contentDescription="@string/qrCodeImageDescription" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/closeView"
                android:layout_gravity="center"
                android:src="@drawable/close_view"
                android:onClick="hideQRCode"
                android:clickable="true"
                android:contentDescription="@string/closeViewImageDescription"
                android:layout_alignParentTop="false"
                android:layout_above="@+id/qrCodeView"
                android:layout_toRightOf="@+id/qrCodeView"
                android:layout_marginLeft="-80dp"
                android:layout_marginBottom="-70dp" />
        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
